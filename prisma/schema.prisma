generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id           String        @id @default(cuid())
  name         String
  description  String
  price        String
  menu         String
  image        String
  owner        String
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  orders       Order[]
  reservations Reservation[]
  tables       Table[]
  tabs         Tab[]
  menuItems    MenuItem[]

  @@map("stores")
}

model MenuItem {
  id          String    @id @default(cuid())
  storeId     String    @map("store_id")
  store       Store     @relation(fields: [storeId], references: [id])
  name        String
  description String?
  price       String
  image       String?
  category    String?
  available   Boolean   @default(true)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  tabItems    TabItem[]

  @@map("menu_items")
}

model Table {
  id        String   @id @default(cuid())
  storeId   String   @map("store_id")
  store     Store    @relation(fields: [storeId], references: [id])
  number    Int
  name      String?
  seats     Int      @default(4)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  tabs      Tab[]

  @@unique([storeId, number])
  @@map("tables")
}

model Order {
  id        String   @id @default(cuid())
  storeId   String   @map("store_id")
  store     Store    @relation(fields: [storeId], references: [id])
  count     String
  price     String
  customer  String
  hash      String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("orders")
}

model Reservation {
  id            String            @id @default(cuid())
  storeId       String            @map("store_id")
  store         Store             @relation(fields: [storeId], references: [id])
  customer      String
  customerName  String            @map("customer_name")
  phone         String?
  date          DateTime
  time          String
  partySize     Int               @map("party_size")
  note          String?
  paymentTxHash String?           @map("payment_tx_hash")
  status        ReservationStatus @default(PENDING)
  tabId         String?           @unique @map("tab_id")
  tab           Tab?              @relation(fields: [tabId], references: [id])
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  @@map("reservations")
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// Tab system for post-meal payment
model Tab {
  id            String      @id @default(cuid())
  storeId       String      @map("store_id")
  store         Store       @relation(fields: [storeId], references: [id])
  tableId       String?     @map("table_id")
  table         Table?      @relation(fields: [tableId], references: [id])
  customer      String
  customerName  String?     @map("customer_name")
  status        TabStatus   @default(OPEN)
  items         TabItem[]
  reservation   Reservation?
  totalAmount   String      @default("0") @map("total_amount")
  paymentTxHash String?     @map("payment_tx_hash")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  closedAt      DateTime?   @map("closed_at")

  @@map("tabs")
}

enum TabStatus {
  OPEN
  PENDING_PAYMENT
  PAID
  CANCELLED
}

model TabItem {
  id         String   @id @default(cuid())
  tabId      String   @map("tab_id")
  tab        Tab      @relation(fields: [tabId], references: [id])
  menuItemId String?  @map("menu_item_id")
  menuItem   MenuItem? @relation(fields: [menuItemId], references: [id])
  name       String
  price      String
  quantity   Int      @default(1)
  note       String?
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("tab_items")
}
