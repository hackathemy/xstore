# Backend API URL
NEXT_PUBLIC_BACKEND_URL="http://localhost:3001"

# Privy App ID (get from https://dashboard.privy.io)
NEXT_PUBLIC_PRIVY_APP_ID=""

# Movement Network Configuration
# Options: "testnet" | "mainnet" | "local"
NEXT_PUBLIC_NETWORK="testnet"

# Stablecoin Settings
# Set to "false" to use native MOVE instead of stablecoins
NEXT_PUBLIC_USE_STABLECOIN="true"

# Test Wallet Private Key (Ed25519 format)
# Generate with: aptos key generate --output-file test_key
# WARNING: Use only for development! Never commit real private keys
NEXT_PUBLIC_TEST_PRIVATE_KEY=""

# Testnet Stablecoin Coin Types (optional)
# If not set, falls back to native MOVE for testing
# NEXT_PUBLIC_TESTNET_USDC_COIN_TYPE=""
# NEXT_PUBLIC_TESTNET_USDT_COIN_TYPE=""

# Mainnet Stablecoin Coin Types (LayerZero bridged)
# NEXT_PUBLIC_USDC_COIN_TYPE="0xbae207659db88bea0cbead6da0ed00aac12edcdda169e591cd41c94180b46f3b::usdc::USDC"
# NEXT_PUBLIC_USDT_COIN_TYPE="0xbae207659db88bea0cbead6da0ed00aac12edcdda169e591cd41c94180b46f3b::usdt::USDT"

# Payment Module Address (your deployed contract)
# NEXT_PUBLIC_PAYMENT_MODULE_ADDRESS=""
