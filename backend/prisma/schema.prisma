generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id            String        @id @default(cuid())
  name          String
  description   String
  price         String
  menu          String
  image         String
  owner         String
  walletAddress String        @map("wallet_address") // Address for receiving payments
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  orders        Order[]
  reservations  Reservation[]
  tables        Table[]
  tabs          Tab[]
  menuItems     MenuItem[]
  settlements   Settlement[]

  @@map("stores")
}

model MenuItem {
  id          String    @id @default(cuid())
  storeId     String    @map("store_id")
  store       Store     @relation(fields: [storeId], references: [id])
  name        String
  description String?
  price       String
  image       String?
  category    String?
  available   Boolean   @default(true)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  tabItems    TabItem[]

  @@map("menu_items")
}

model Table {
  id        String   @id @default(cuid())
  storeId   String   @map("store_id")
  store     Store    @relation(fields: [storeId], references: [id])
  number    Int
  name      String?
  seats     Int      @default(4)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  tabs      Tab[]

  @@unique([storeId, number])
  @@map("tables")
}

model Order {
  id        String   @id @default(cuid())
  storeId   String   @map("store_id")
  store     Store    @relation(fields: [storeId], references: [id])
  count     String
  price     String
  customer  String
  hash      String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("orders")
}

model Reservation {
  id            String            @id @default(cuid())
  storeId       String            @map("store_id")
  store         Store             @relation(fields: [storeId], references: [id])
  customer      String
  customerName  String            @map("customer_name")
  phone         String?
  date          DateTime
  time          String
  partySize     Int               @map("party_size")
  note          String?
  paymentTxHash String?           @map("payment_tx_hash")
  status        ReservationStatus @default(PENDING)
  tabId         String?           @unique @map("tab_id")
  tab           Tab?              @relation(fields: [tabId], references: [id])
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  @@map("reservations")
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// Tab system for post-meal payment
model Tab {
  id            String      @id @default(cuid())
  storeId       String      @map("store_id")
  store         Store       @relation(fields: [storeId], references: [id])
  tableId       String?     @map("table_id")
  table         Table?      @relation(fields: [tableId], references: [id])
  tableNumber   Int?        @map("table_number")
  customer      String?
  customerName  String?     @map("customer_name")
  status        TabStatus   @default(OPEN)
  items         TabItem[]
  payments      Payment[]
  reservation   Reservation?
  total         Decimal     @default(0) @db.Decimal(18, 6)
  totalAmount   String      @default("0") @map("total_amount")
  paymentTxHash String?     @map("payment_tx_hash")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  closedAt      DateTime?   @map("closed_at")

  @@map("tabs")
}

enum TabStatus {
  OPEN
  PENDING_PAYMENT
  PAID
  CANCELLED
}

model TabItem {
  id         String    @id @default(cuid())
  tabId      String    @map("tab_id")
  tab        Tab       @relation(fields: [tabId], references: [id])
  menuItemId String?   @map("menu_item_id")
  menuItem   MenuItem? @relation(fields: [menuItemId], references: [id])
  name       String
  price      Decimal   @db.Decimal(18, 6)
  quantity   Int       @default(1)
  note       String?
  createdAt  DateTime  @default(now()) @map("created_at")

  @@map("tab_items")
}

// Payment model for x402 stablecoin payments
model Payment {
  id           String        @id @default(cuid())
  tabId        String        @map("tab_id")
  tab          Tab           @relation(fields: [tabId], references: [id])
  payerAddress String        @map("payer_address")
  amount       Decimal       @db.Decimal(18, 6)
  tokenAddress String        @map("token_address")
  status       PaymentStatus @default(PENDING)
  txHash       String?       @map("tx_hash")
  settlementId String?       @map("settlement_id")
  settlement   Settlement?   @relation(fields: [settlementId], references: [id])
  refunds      Refund[]
  createdAt    DateTime      @default(now()) @map("created_at")
  completedAt  DateTime?     @map("completed_at")

  @@map("payments")
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

// Settlement model for batch payouts to store owners
model Settlement {
  id          String           @id @default(cuid())
  storeId     String           @map("store_id")
  store       Store            @relation(fields: [storeId], references: [id])
  amount      Decimal          @db.Decimal(18, 6)
  status      SettlementStatus @default(PENDING)
  paymentIds  String[]         @map("payment_ids")
  payments    Payment[]
  txHash      String?          @map("tx_hash")
  createdAt   DateTime         @default(now()) @map("created_at")
  processedAt DateTime?        @map("processed_at")

  @@map("settlements")
}

enum SettlementStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// Refund model for payment refunds
model Refund {
  id              String       @id @default(cuid())
  paymentId       String       @map("payment_id")
  payment         Payment      @relation(fields: [paymentId], references: [id])
  amount          Decimal      @db.Decimal(18, 6)
  reason          String
  requestedBy     String       @map("requested_by")
  status          RefundStatus @default(PENDING)
  txHash          String?      @map("tx_hash")
  rejectionReason String?      @map("rejection_reason")
  createdAt       DateTime     @default(now()) @map("created_at")
  approvedAt      DateTime?    @map("approved_at")
  processedAt     DateTime?    @map("processed_at")

  @@map("refunds")
}

enum RefundStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSING
  COMPLETED
  FAILED
}
